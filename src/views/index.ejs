<!--Cabecera-->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Gemunu+Libre:wght@300;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="fondo">

<div class="container">
  <%if (signinMessage.length > 0) {%>
    <div class="alert alert-danger">
  <%= signinMessage %>
    </div>
  <% } %>
</div>

<!--Login V2-->
<div class="limiter">
  <div class="container-login100">
    <div class="wrap-login100">
      <div class="login100-form-title" style="background-image: url(../img/1.jpg);">
        <span class="login100-form-title-1">
          Iniciar Sesión
        </span>
      </div>

      <form action="/index" method="POST" class="login100-form validate-form">
        <div class="wrap-input100 validate-input m-b-26" data-validate="Username is required">
          <span class="label-input100">Correo</span>
          <input class="input100" type="email" name="email" placeholder="Ingresa tu correo">
          <span class="focus-input100"></span>
        </div>

        <div class="wrap-input100 validate-input m-b-18" data-validate = "Password is required">
          <span class="label-input100">Contraseña</span>
          <input class="input100" type="password" name="password" placeholder="Ingresa tu contraseña">
          <span class="focus-input100"></span>
        </div>
          <div>
            <br>
            <a href="/signup" class="txt1">
              ¿No tienes una cuenta? Registrate
            </a>
          </div>
          <br><br><br>
          <div class="container-login100-form-btn">
            <button type="submit" class="login100-form-btn" >
              Iniciar Sesión
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<!--Footer-->
<footer class="text-center">
  <div class="text-center p-3 text-black">
    © 2021 Copyright:
    <a class="text-black" href="">Pegasus</a>
  </div>
</footer>
</body>
</html>
